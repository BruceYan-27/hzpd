{
	"pages": [
		{
		    "path" : "pages/switchPages/index",
		    "style" :
		    {
		        "navigationBarTitleText": "GraceUI",
		        "navigationStyle" : "custom"
		    }
		}
        ,{
            "path" : "pages/switchPages/about",
            "style" :
            {
                "navigationBarTitleText": "GraceUI · 关于",
				"navigationStyle" : "custom"
            }
        }
        ,{
            "path" : "pages/login/login",
            "style" :
            {
                "navigationBarTitleText": "登录页面",
                "enablePullDownRefresh": false,
				"navigationStyle" : "custom"
            }
        },
		{
			"path" : "pages/staff_management/staff_management",
			"style" :
			{
			    "navigationBarTitleText": "员工信息",
			    "enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/staff_management/add_staff",
			"style": {
				"navigationBarTitleText": "新增员工",
				"enablePullDownRefresh": false
			}
		}
        ,{
            "path" : "pages/product_management/product_management",
            "style" :
            {
                "navigationBarTitleText": "产品管理",
				"navigationStyle" : "custom"
            }

        },
		{
			"path": "pages/product_management/add_product",
			"style": {
				"navigationBarTitleText": "新增产品",
				"enablePullDownRefresh": false,
				"navigationStyle" : "custom"
			}
		}
        ,{
            "path" : "pages/product_attributes/product_attributes",
            "style" :
            {
                "navigationBarTitleText": "产品属性管理",
                "enablePullDownRefresh": false
            }

        }
    ],
	"globalStyle": {
		"rpxCalcMaxDeviceWidth": 0,
		"rpxCalcBaseDeviceWidth": 375,  // rpx 计算使用的基准设备宽度，设备实际宽度超出 rpx 计算所支持的最大设备宽度时将按基准宽度计算，单位 px，默认值为 375
		"rpxCalcIncludeWidth": 750,  // rpx 计算特殊处理的值，始终按实际的设备宽度计算，单位 rpx，默认值为 750
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "GraceUI",
		"navigationBarBackgroundColor": "#1E88E5",
		"backgroundColor": "#FFFFFF",
		"pageOrientation": "auto"
	},
	"easycom": {
		"autoscan" : true,
		"custom": {
			"gui-(.*)" : "@/Grace6/components/gui-$1.vue",
			"^qiun-(.*)": "@/uni_modules/qiun-data-charts/components/qiun-$1/qiun-$1.vue"
		}
	}
}
